<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.blogservice.mapper.LikeMapper">
    <insert id="addLike">
        INSERT INTO `like` (blog_id, creator_id, modifier_id) VALUES (#{id}, #{userId}, #{userId})
    </insert>
    <delete id="deleteLike">
        DELETE FROM `like` WHERE blog_id = #{id} AND creator_id = #{userId}
    </delete>
    <select id="getLikeCount" resultType="java.lang.Integer">
        select count(*) from `like` where blog_id = #{blogId}
    </select>
    <select id="isLiked" resultType="java.lang.Boolean">
        select count(*) > 0 from `like` where blog_id = #{id} and creator_id = #{userId}
    </select>
</mapper>